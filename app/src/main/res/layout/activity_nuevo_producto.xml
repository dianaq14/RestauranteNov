<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoProductoActivity"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/name_ActNewProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Nombre"/>

    <EditText
        android:id="@+id/price_ActNewProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Precio"/>

    <EditText
        android:id="@+id/descripcion_ActNewProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="DescripciÃ³n"/>

    <ImageView
        android:id="@+id/imgSelect_ActNewProd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/asinimag"/>

    <Button
        android:id="@+id/bnGuardar_ActNewProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textSize="22dp"
        android:textStyle="bold"
        android:backgroundTint="#1A237E"
        android:layout_gravity="center"/>



</LinearLayout>